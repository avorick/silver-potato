<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/yellow_shade"
                android:startColor="@color/yellow_light"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey_shade"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/yellow_shade"
                android:startColor="@color/yellow_light"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey_shade"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/orange_shade"
                android:startColor="@color/orange_light"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>